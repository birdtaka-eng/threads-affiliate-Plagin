{
    "manifest_version": 3,
    "name": "Threads職人 サイドパネル",
    "version": "4.0",
    "description": "Threads投稿支援ツール (Popup版 v4.0)",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.threads.net/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Threads職人を開く"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.threads.net/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}