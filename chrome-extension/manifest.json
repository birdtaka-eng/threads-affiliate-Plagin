{
    "manifest_version": 3,
    "name": "Threads Posting Assistant",
    "version": "2.0",
    "description": "Save drafts and insert them into Threads with one click.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.threads.net/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.threads.net/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}